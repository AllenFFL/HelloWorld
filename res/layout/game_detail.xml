<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1874CD" >

    <ImageView
        android:id="@id/im_detail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:focusable="true" />

    <TextView
        android:id="@id/tv_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/im_detail"
        android:layout_toRightOf="@id/im_detail"
        android:text="@string/game_name"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@id/tv_version"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/im_detail"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/tv_name"
        android:text="@string/game_version"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@id/tv_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/im_detail"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/tv_version"
        android:text="@string/game_time"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@id/tv_detail"
        android:layout_width="700dp"
        android:layout_height="150dp"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/im_detail"
        android:text="@string/app_detail"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@id/pb_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/im_detail"
        android:layout_alignLeft="@id/im_detail"
        android:max="200"
        android:progress="0" />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/tv_detail"
	    android:layout_marginTop="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_alignLeft="@id/tv_detail"
	    android:orientation="horizontal"
	    >
	    <ImageView
	        android:id="@id/im_page1"
	        android:layout_width="250dp"
	        android:layout_height="200dp"
	        android:background="@color/yellow" />
	
	    <ImageView
	        android:id="@id/im_page2"
	        android:layout_width="250dp"
	        android:layout_height="200dp"
	        android:layout_marginLeft="20dp"
	        android:background="@color/yellow" />
	
	   <ImageView
	        android:id="@id/im_page3"
	        android:layout_width="250dp"
	        android:layout_height="200dp"
	        android:layout_marginLeft="20dp"
	        android:background="@color/yellow" />
   </LinearLayout>

</RelativeLayout>