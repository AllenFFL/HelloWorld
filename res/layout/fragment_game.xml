<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@id/vp_game"
        android:layout_width="500dp"
        android:layout_height="370dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/beige" />

    <ImageView
        android:id="@id/iv_app1"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/vp_game"
        android:background="@color/blue" />

    <ImageView
        android:id="@id/iv_app2"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/iv_app1"
        android:background="@color/azure" />

    <ImageView
        android:id="@id/iv_app3"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@id/iv_app1"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/iv_app1"
        android:background="@color/black" />
<!--         android:layout_toRightOf="@id/vp_game" -->

    <ImageView
        android:id="@id/iv_app4"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@id/iv_app2"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/iv_app2"
        android:background="@color/aquamarine" />
<!--         android:layout_toRightOf="@id/iv_app3" -->

    <TextView
        android:id="@id/tv_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vp_game"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="我叫MT我叫MT我叫MT我叫MT我叫MT我叫MT我叫MT我叫MT我叫MT我叫MT我叫MT我叫MT我叫MT我叫MTMT我叫MT我叫MT我叫MT我叫MT我叫MT我叫MT我叫MT我叫MT我叫MTMT我叫MT我叫MT我叫MT我叫MT我叫MT我叫MT"
        android:textSize="20sp" />

</RelativeLayout>